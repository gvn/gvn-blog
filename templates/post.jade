html
  head
    include header.jade
  body
    h2.logo
      span.sr-only=global.title
      a(href="/")
        img(src='/blog/img/wordmark.png')

    header
      h1=title
      p.subheader
        time
          if modifiedDate
            em=`${publishDate} (Revised: ${modifiedDate})`
          else
            em=publishDate


    main.markdown !{contents}

    div.interpost-navigator

      .direction.previous
        if (next)
          p Previously
          a(href='/' + next.path)=next.title

      .direction.next
        if (previous)
          p Next up
          a(href='/' + previous.path)=previous.title

    ul.tags
      each tag in tags
        li
          a(href=global.root+"tag/" + tag)=tag

    hr

    include footer.jade
